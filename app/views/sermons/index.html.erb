<div id="sermon-wrapper">
<h1>New Hope Sermons</h1>

<button>Upload a Sermon</button>
<div id="sermon-form"><%= render :template => "sermons/new" %></div><br>


<% @sermons.each do |sermon| %>

<table id="sermons">

	<tr>

		<th id="title">
			<%= sermon.title %>
		</th>
		<th id="pastor">
			by <%= sermon.pastor %>
		</th>
		<td id="audio">
			<audio controls="controls">
				<source src="<%= sermon.audio%>">

			</audio>
		</td>
	</tr>
</table>
<% end %>
</div>

<script type="text/javascript">
	

(function(){


 $('#sermon-form').hide()

	$('button').on('click', function(){
		$('#sermon-form').show()
	}
})();
</script>